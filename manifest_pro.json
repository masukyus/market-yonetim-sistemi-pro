{
  "name": "Market Stok Yönetimi",
  "short_name": "Stok App",
  "description": "Profesyonel PWA tabanlı market stok yönetim sistemi. Barkod okuma, offline çalışma, kategori yönetimi ve detaylı raporlama özellikleri ile donatılmış kurumsal çözüm.",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait-primary",
  "theme_color": "#6366f1",
  "background_color": "#1e293b",
  "lang": "tr",
  "dir": "ltr",
  
