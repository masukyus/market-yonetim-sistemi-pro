      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Ana Ekran - Ürün Listesi"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobil - Hızlı Ekleme"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobil - Barkod Tarama"
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "Hızlı Ekle",
      "short_name": "Ekle",
      "description": "Yeni ürün ekle",
      "url": "/?action=quick-add",
      "icons": [
        {
          "src": "/icons/shortcut-add.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Barkod Tara",
      "short_name": "Tara",
      "description": "Barkod tarayıcıyı aç",
      "url": "/?action=scan",
      "icons": [
        {
          "src": "/icons/shortcut-scan.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Kritik Ürünler",
      "short_name": "Kritik",
      "description": "SKT'ye yakın ürünleri göster",
      "url": "/?filter=critical",
      "icons": [
        {
          "src": "/icons/shortcut-alert.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".csv", ".xlsx"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+marketstok",
      "url": "/?barcode=%s"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "iarc_rating_id": "",
  
  "permissions": [
    "camera",
    "storage",
    "notifications"
  ],
  
  "features": [
    "offline-mode",
    "barcode-scanner",
    "excel-export",
    "local-storage",
    "background-sync",
    "push-notifications"
  ],
  
  "gcm_sender_id": "",
  
  "custom_properties": {
    "offline_enabled": true,
    "cache_version": "v1.0.0",
    "minimum_chrome_version": "80",
    "minimum_safari_version": "13",
    "minimum_firefox_version": "75"
  }
}